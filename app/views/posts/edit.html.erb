<h1>Editing post</h1>

<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <%= f.label :date %><br>
    <%= f.date_select :date %><br><br>

  
    <%= f.label :subject %><br>
    <%= f.text_field :subject %><br><br>


    <%= f.label :title %><br>
    <%= f.text_field :title %><br><br>
  

    <%= f.label :tags %><br>
    <% @post.tags.each do |tag| %>
    <%= f.fields_for :tags, tag do |tag_field| %>
    <%= tag_field.text_field :name %>
    <% end %>
    <% end %>
    <br><br>

    <%= f.label :comment %><br>
    <%= f.text_area :comment %><br><br>


<br>
    <%= f.submit %>
<% end %>

<%= link_to 'Show', @post %> |
