<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Subject</th>
      <th>Tags</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.date %> |</td>
        <td>| <%= post.subject %> </td>
        <td> <%= post.tags %></td>
        <td><%= link_to 'Show', post %> |</td>
        <td>| <%= link_to 'Edit', edit_post_path(post) %> |</td>
        <td>| <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "Home", root_path %><br>
<%= link_to 'New Post', new_post_path %>
